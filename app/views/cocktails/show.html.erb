<p id="notice"><%= notice %></p>

<h3><%= @cocktail.name %></h3>
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
<table>
  <thead>
  <tr>
    <td>Dose</td>
    <td>Ingredient</td>
  </tr>
  </thead>
  <tbody>
    <% @cocktail.doses.each do |dose| %>
      <tr>
        <td><%= dose.description %></td>
        <td><%= dose.ingredient.name %></td>
        <td><%= link_to 'Delete', dose, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
<%= link_to 'Back', cocktails_path %>
